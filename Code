def try_on_outerwear():
    print("You have selected Outerwear.")
    
    print("Please select a type of outerwear:")
    print("1. Coat")
    print("2. Blazer")
    print("3. Hoodie")
    print("4. Raincoat")
    print("5. Windbreaker")

    outerwear_choice = input("Enter your choice (1/2/3/4/5): ")

    if outerwear_choice == '1':
        print("You have selected a Coat.")
    elif outerwear_choice == '2':
        print("You have selected a Blazer.")
    elif outerwear_choice == '3':
        print("You have selected a Hoodie.")
    elif outerwear_choice == '4':
        print("You have selected a Raincoat.")
    elif outerwear_choice == '5':
        print("You have selected a Windbreaker.")
    else:
        print("Invalid choice! Please restart the application.")
        return

    simulate_try_on()

def simulate_try_on():
    print("Simulating virtual try-on...")
    print("Fitting the item...")
    print("Displaying the item in AR...")
    print("Fit looks great! You're all set!")

def main():
    print("Welcome to the Virtual Try-On Experience!")
    print("Please select a category to try on:")
    print("1. Clothing")
    print("2. Accessories")
    print("3. Footwear")
    print("4. Outerwear")

    choice = input("Enter your choice (1/2/3/4): ")

    if choice == '1':
        try_on_clothing()
    elif choice == '2':
        try_on_accessories()
    elif choice == '3':
        try_on_footwear()
    elif choice == '4':
        try_on_outerwear()
    else:
        print("Invalid choice! Please restart the application.")

if __name__ == "__main__":
    main()
