def try_on_clothing():
    print("You have selected Clothing.")
    size = input("Please enter your size (S/M/L/XL): ")

    print("Please select a type of clothing:")
    print("1. T-Shirt")
    print("2. Jeans")
    print("3. Jacket")
    print("4. Dress")
    print("5. Shorts")
    
    clothing_choice = input("Enter your choice (1/2/3/4/5): ")

    if clothing_choice == '1':
        print(f"You have selected a T-Shirt of size {size}.")
    elif clothing_choice == '2':
        print(f"You have selected Jeans of size {size}.")
    elif clothing_choice == '3':
        print(f"You have selected a Jacket of size {size}.")
    elif clothing_choice == '4':
        print(f"You have selected a Dress of size {size}.")
    elif clothing_choice == '5':
        print(f"You have selected Shorts of size {size}.")
    else:
        print("Invalid choice! Please restart the application.")
        return

    simulate_try_on()

def try_on_accessories():
    print("You have selected Accessories.")
    
    print("Please select an accessory:")
    print("1. Hat")
    print("2. Sunglasses")
    print("3. Watch")
    print("4. Necklace")
    print("5. Bracelet")

    accessory_choice = input("Enter your choice (1/2/3/4/5): ")

    if accessory_choice == '1':
        print("You have selected a Hat.")
    elif accessory_choice == '2':
        print("You have selected Sunglasses.")
    elif accessory_choice == '3':
        print("You have selected a Watch.")
    elif accessory_choice == '4':
        print("You have selected a Necklace.")
    elif accessory_choice == '5':
        print("You have selected a Bracelet.")
    else:
        print("Invalid choice! Please restart the application.")
        return

    simulate_try_on()

